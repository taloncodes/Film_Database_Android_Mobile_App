<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <EditText
        android:id="@+id/searchByYearEditText"
        android:layout_width="482dp"
        android:layout_height="46dp"
        android:layout_marginBottom="808dp"
        android:ems="10"
        android:hint="enter year to search"
        android:inputType="textPersonName"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/searchByYearButton"
        android:layout_width="454dp"
        android:layout_height="68dp"
        android:layout_marginBottom="761dp"
        android:text="Search by Year"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.6"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchByYearEditText"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/numberRecordsLabel"
        android:layout_width="207dp"
        android:layout_height="30dp"
        android:layout_marginTop="4dp"
        android:text="Number of records:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchByYearButton" />

    <TextView
        android:id="@+id/numberRecordsDisplay"
        android:layout_width="261dp"
        android:layout_height="30dp"
        android:layout_marginStart="216dp"
        android:layout_marginLeft="216dp"
        android:layout_marginTop="4dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchByYearButton" />

    <Button
        android:id="@+id/displayAllRecordsButton"
        android:layout_width="477dp"
        android:layout_height="59dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="652dp"
        android:text="Display All Records"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/numberRecordsLabel"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/resultsTextView"
        android:layout_width="478dp"
        android:layout_height="17dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayAllRecordsButton" />

    <ListView
        android:id="@+id/listView"
        android:layout_width="432dp"
        android:layout_height="465dp"
        android:layout_marginTop="68dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/displayAllRecordsButton" />

</androidx.constraintlayout.widget.ConstraintLayout>